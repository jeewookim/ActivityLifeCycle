<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".MainActivity">

    <TextView android:text="Create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Create"
        android:textSize = "20dp"/>

    <TextView android:text="Start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below = "@id/Create"
        android:id="@+id/Start"
        android:textSize = "20dp"/>

    <TextView android:text="Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Stop"
        android:layout_below = "@id/Start"
        android:textSize = "20dp"/>

    <TextView android:text="Pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Pause"
        android:layout_below = "@id/Stop"
        android:textSize = "20dp"/>

    <TextView android:text="Resume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Resume"
        android:layout_below = "@id/Pause"
        android:textSize = "20dp"/>

    <TextView android:text="Restart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Restart"
        android:layout_below = "@id/Resume"
        android:textSize = "20dp"/>

    <TextView android:text="Destroy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Destroy"
        android:layout_below = "@id/Restart"
        android:textSize = "20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Dos"
        android:id="@+id/forward"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="430dp" />

    <Spinner
        android:id="@+id/number_choice"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight = "true"
        android:spinnerMode="dropdown"/>

    <TextView android:text="User Value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/DosValue"
        android:layout_below = "@id/Destroy"
        android:textSize = "20dp"/>


</RelativeLayout>
